{
  "manifest_version": 2,

  "name": "mtgsale price helper",
  "description": "helps to find card on mtgsale site for sale",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "mtgsale"
  },
  "content_scripts": [{
      "matches": ["https://mtgsale.ru/home/buylist*"],
      "js":      ["jquery.min.js", "content.js"]
  }],
  "options_page": "options.html",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "*://*/*"
  ]
}